<%- include ("template/header") %>
<%- include ("template/navbar") %>
<%- include ("template/aside") %>  
  
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <h1>CRUD USER</h1>
            
            <div class="container">
              <a href="/create" class="btn btn-primary mb-4">Create <i class="fa-regular fa-square-plus"></i></a>
            <table id="example1" class="table table-bordered table-striped text-center">
              <thead>
                <tr class="table-primary text-white">
                  <th scope="col">#ID</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Rol</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                  <% results.forEach ((user) =>{ %>
  
                      <tr>
                          <th> <%= user.id %> </th>
                          <td> <%= user.name %> </td>
                          <td> <%= user.email %> </td>
                          <td> <%= user.rol %> </td>                
                          <td>
                              <a href="/edit/<%= user.id %>" class="btn btn-info">Edit <i class="fa-regular fa-pen-to-square"></i></a>
                              <!--<a href="/delete/<%= user.id %>" onclick="return confirm('Esta seguro de eliminar el registro?');" class="btn btn-danger">Delete</a> -->
                              <a onclick="confirmation(<%= user.id %>);" class="btn btn-danger">Delete <i class="fa-regular fa-trash-can"></i></a>                            
                          </td>
                      </tr>
                      
                  <% }) %>
              </tbody>
            </table>
        </div>
          </div>
          
        </div>
      </div><!-- /.container-fluid -->
    </section>

    
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include ("template/footer") %>  